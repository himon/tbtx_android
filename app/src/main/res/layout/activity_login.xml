<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_gray_bg"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.buddysoft.tbtx_android.ui.activity.account.LoginActivity">

    <include layout="@layout/layout_toolbar"/>

    <EditText
        android:id="@+id/et_user"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_radius_edittext_while_bg"
        android:hint="请输入用户ID/手机号"
        android:text="zhoujielun"
        android:textSize="@dimen/font_size_14"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_radius_edittext_while_bg"
        android:hint="请输入密码"
        android:text="123456"
        android:inputType="textPassword"
        android:textSize="@dimen/font_size_14"
        android:padding="8dp"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_radius_button_green_bg"
        android:text="登陆"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tv_find_pwd"
        android:textSize="@dimen/font_size_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="找回密码"/>

</LinearLayout>
